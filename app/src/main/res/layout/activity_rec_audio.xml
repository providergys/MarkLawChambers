<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demo.RecAudio">

    <Button
        android:id="@+id/button1here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="50dp"
        android:text="Start Recording"
        android:onClick="startRecording"
        />

    <Button
        android:id="@+id/button2here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1here"
        android:layout_below="@+id/button1here"
        android:layout_marginTop="64dp"
        android:text="Stop Recording"
        android:onClick="stopRecording"
        />



    <Button
        android:id="@+id/button3here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button2here"
        android:layout_below="@+id/button2here"
        android:layout_marginTop="64dp"
        android:text="Stop Recording"

        />

</RelativeLayout>
